generator client {
  provider = "prisma-client"
  output = "../src/generated"
}

datasource db {
  provider = "mongodb"
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  phone     String?
  password  String
  bookings  Booking[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Bus {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  type           String
  basePrice      Float
  departure      String
  arrival        String
  seatsAvailable Int
  bookings       Booking[]
  seats          Seat[]
}

model Booking {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  busId       String   @db.ObjectId
  seatNumbers Int[]
  totalPrice  Float
  status      String   @default("Confirmed") // Confirmed, Pending, Cancelled
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  bus  Bus  @relation(fields: [busId], references: [id])
}

model Seat {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  busId      String  @db.ObjectId
  seatNumber Int
  isBooked   Boolean @default(false)

  bus Bus @relation(fields: [busId], references: [id])
}
